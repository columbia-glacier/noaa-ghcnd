{
  "name": "noaa-ghcnd",
  "title": "NOAA Daily Global Historical Climatology Network (GHCN-DAILY)",
  "description": "Meteorological observations from nearby land surface weather stations.",
  "version": "0.1.0",
  "contributors": [
    {
      "title": "Ethan Welty",
      "email": "ethan.welty@gmail.com",
      "role": "author"
    }
  ],
  "sources": [
    {
      "title": "NOAA GHCN-DAILY Data File Access",
      "path": "ftp://ftp.ncdc.noaa.gov/pub/data/ghcn/daily/"
    }
  ],
  "resources": [
    {
      "name": "stations",
      "title": "Station Metadata",
      "path": "data/stations.csv",
      "schema": {
        "fields": [
          {
            "name": "id",
            "type": "string",
            "description": "Station identifier"
          },
          {
            "name": "name",
            "type": "string",
            "description": "Station name"
          },
          {
            "name": "longitude",
            "type": "number",
            "description": "Longitude (unknown datum)",
            "unit": "°"
          },
          {
            "name": "latitude",
            "type": "number",
            "description": "Latitude (unknown datum)",
            "unit": "°"
          },
          {
            "name": "elevation",
            "type": "number",
            "description": "Elevation above sea level (unknown datum)",
            "unit": "m"
          }
        ]
      }
    },
    {
      "name": "data",
      "title": "Station Data",
      "path": "data/data.csv",
      "schema": {
        "fields": [
          {
            "name": "id",
            "type": "string",
            "description": "Station identifier"
          },
          {
            "name": "t",
            "type": "date",
            "description": "Date (AKST:UTC-9)",
            "format": "%Y-%m-%d"
          },
          {
            "name": "precipitation",
            "type": "number",
            "description": "Total precipitation",
            "unit": "m"
          },
          {
            "name": "snowfall",
            "type": "number",
            "description": "Total snowfall",
            "unit": "m"
          },
          {
            "name": "snow_depth",
            "type": "number",
            "description": "Depth of snow on the ground",
            "unit": "m"
          },
          {
            "name": "snow_depth_water",
            "type": "number",
            "description": "Water equivalent of snow on the ground",
            "unit": "m"
          },
          {
            "name": "air_temperature_avg",
            "type": "number",
            "description": "Average temperature",
            "unit": "°C"
          },
          {
            "name": "air_temperature_min",
            "type": "number",
            "description": "Minimum temperature",
            "unit": "°C"
          },
          {
            "name": "air_temperature_max",
            "type": "number",
            "description": "Maximum temperature",
            "unit": "°C"
          }
        ]
      }
    }
  ]
}
